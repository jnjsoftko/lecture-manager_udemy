{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "esModuleInterop": true,
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "ES6",
    "target": "es6",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
}